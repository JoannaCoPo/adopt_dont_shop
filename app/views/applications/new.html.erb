<h4>Pet Adoption Application Form:</h4>
<p>Please fill in all fields to submit your application.</p>

<%= form_with url: '/applications/', method: :post, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>

  <%= form.label :address %>
  <%= form.text_field :address %>

  <%= form.label :city %>
  <%= form.text_field :city %>

  <%= form.label :state %>
  <%= form.text_field :state %>

  <%= form.label :zip_code %>
  <%= form.text_field :zip %>

  <p><%= form.submit "SUBMIT" %>
<% end %>
